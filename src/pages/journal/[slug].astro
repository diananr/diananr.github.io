---
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const modules = import.meta.glob<{
    default: any;
    frontmatter: {
      title: string;
      date: string;
      description: string;
      author: string;
      tags: string[];
    };
  }>('../../content/journal/*.mdx', { eager: true });

  return Object.entries(modules).map(([path, mod]) => {
    const id = path.split('/').pop()?.replace('.mdx', '');
    return {
      params: { slug: id },
      props: { entryModule: mod },
    };
  });
}

const { entryModule } = Astro.props as {
  entryModule: {
    default: any;
    frontmatter: {
      title: string;
      date: string;
      description: string;
      author: string;
      tags: string[];
    };
  };
};

const { title, date, description, author, tags } = entryModule.frontmatter;
---

<Layout title={`${title} | Journal`} description={description}>
  <header>
    <h1>{title}</h1>
    <time datetime={date}
      >{
        new Date(date).toLocaleDateString('es-ES', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })
      }</time
    >
    {
      tags.length > 0 && (
        <ul>
          {tags.map((tag) => (
            <li>{tag}</li>
          ))}
        </ul>
      )
    }
  </header>
  <article>
    <entryModule.default />
  </article>
</Layout>

<style lang="scss">
  header {
    max-width: 800px;
    margin: 0 auto;
    font-family: 'Inter', sans-serif;
    line-height: 1.6;

    h1 {
      font-size: 2.25rem;
      font-weight: 700;
      margin-bottom: 0.5rem;
    }

    time {
      display: block;
      font-size: 0.875rem;
      color: #6b7280;
      margin-bottom: 0.5rem;
    }

    ul {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      padding: 0;
      list-style: none;
      margin-top: 0.5rem;

      li {
        background-color: #e0e7ff;
        color: #3730a3;
        font-size: 0.875rem;
        font-weight: 600;
        padding: 0.25rem 0.5rem;
        border-radius: 0.375rem;
        cursor: default;
        transition:
          background-color 0.2s ease,
          color 0.2s ease;

        &:hover,
        &:focus {
          background-color: #c7d2fe;
          color: #1e3a8a;
          outline: none;
        }
      }
    }
  }

  article {
    max-width: 800px;
    margin: 2rem auto;
    font-size: 1rem;
    line-height: 1.75;
    color: var(--color-neutral-00);

    h2,
    h3,
    h4 {
      margin-top: 2rem;
      margin-bottom: 1rem;
      font-weight: 600;
    }

    p {
      margin-bottom: 1rem;
    }

    ul,
    ol {
      padding-left: 1.5rem;
      margin-bottom: 1rem;

      li {
        margin-bottom: 0.5rem;
      }
    }

    a {
      color: var(--color-neutral-00);
      text-decoration: underline;

      &:hover,
      &:focus {
        color: #1e40af;
      }
    }

    em {
      font-style: italic;
    }

    strong {
      font-weight: 700;
    }
  }
</style>
